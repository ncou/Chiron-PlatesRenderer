{
  "name": "chiron/plates-renderer",
  "type" : "library",
  "description": "Plates Render for Chiron Framework.",
  "keywords": ["chiron","framework","view","template","plates","phpleague","phtml","renderer"],
  "license": "MIT",
  "require": {
        "php": "^7.0",
        "league/plates": "^3.3",
        "psr/container": "^1.0",
        "chiron/template": "^1.3"
  },
  "autoload": {
      "psr-4": {
          "Chiron\\Views\\": "src"
      }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "phpstan/phpstan": "^0.9.2",
    "chiron/container": "^1.0"
  },
  "scripts": {
    "phpunit": "phpunit --colors=always",
    "test-coverage": "phpunit --coverage-clover clover.xml",
    "phpstan": "phpstan analyse src --level=7"
  },
  "extra": {
    "chiron": {
        "providers": ["Chiron\\Views\\Provider\\PlatesRendererServiceProvider"]
    }
  }
}
